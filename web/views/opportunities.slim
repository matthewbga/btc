doctype html
html
  head
    = js :main
    = js :opportunities
    = css :main
    = css :opportunities
    title Opportunities
  body
    table.opportunities
      tr
        td Base
        td Quote
        td Buy at
        td Sell at
        td Ask
        td Bid
        td Spread
        td First Found
        td Last Seen
      - @opportunities.each do |t|
        tr
          td = t.base
          td = t.quote
          td = t.buy
          td = t.sell
          td = t.ask
          td = t.bid
          td = t.spread
          td = t.created_at
          td = t.updated_at
